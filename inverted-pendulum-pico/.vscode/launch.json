{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Pico Debug",
          "cwd": "${workspaceRoot}",
          "executable": "cmake-build/rotary_inverted_pendulum.elf",
          "request": "launch",
          "type": "cortex-debug",
          "servertype": "openocd",
          "armToolchainPath" : "${env:ARM_NONE_EABI_BIN_PATH}",
          "device": "RP2040",
          "configFiles": [
              ".vscode/rp2040.cfg"
          ],
          "svdFile": "${workspaceRoot}/../pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
          "runToMain": true,
          // Work around for stopping at main on restart
          "postRestartCommands": [
              "break main",
              "continue"
          ]
      }
  ]
}